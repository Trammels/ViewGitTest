<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gefei.com.viewdemo.progress.UIProgress">

    <include layout="@layout/view_title_bar">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x37"
        android:paddingTop="@dimen/x37">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <gefei.com.viewdemo.util.XCRoundProgressBar
                        android:id="@+id/progress2"
                        android:layout_width="@dimen/x119"
                        android:layout_height="@dimen/x119"
                        android:layout_gravity="center"
                        app:roundWidth="7dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        tools:text="1111"
                        android:textSize="10sp"
                        />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <gefei.com.viewdemo.util.XCRoundProgressBar
                        android:id="@+id/progress"
                        android:layout_width="@dimen/x201"
                        android:layout_height="@dimen/x201"
                        android:layout_gravity="center"
                        app:roundWidth="10dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|bottom"
                            android:paddingBottom="@dimen/x5"
                            android:text="1.2"
                            android:textSize="20sp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|top"
                            android:paddingTop="@dimen/x5"
                            android:text="米/分"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                <gefei.com.viewdemo.util.XCRoundProgressBar
                    android:id="@+id/progress3"
                    android:layout_width="@dimen/x119"
                    android:layout_height="@dimen/x119"
                    android:layout_gravity="center"
                    app:roundWidth="7dp"
                    />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1.2"
                        android:textSize="10sp"
                        />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
